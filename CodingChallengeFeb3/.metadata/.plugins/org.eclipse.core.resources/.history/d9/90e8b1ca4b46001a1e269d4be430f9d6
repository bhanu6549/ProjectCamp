		System.out.println("Enter the strig");
		String str=sc.nextLine();
		System.out.println("choose the option");
		System.out.println("1.Alternate of upper/lower");
		System.out.println("1.remove o if its oocur twice");
		int ch=sc.nextInt();
		switch(ch)
		{
		case 1:
			String str1=alternate(str);
			System.out.println(str1);
			break;
		case 2:
			String str2=remove(str);
			break;
			
		}
		 
		
		
	}

	private static String remove(String str) {
		// TODO Auto-generated method stub
		return null;
	}

	private static String alternate(String str) {
		
			char ch=str.charAt(0);
			String str3=" ";

			if(ch>='A'&&ch<='Z')
			{
				for(int j=0;j<str.length();j=j+2)
				{
		
			
						ch=str.charAt(j);
						ch=(char) (ch+32);
						str3=str3+ch;
				
				}
			}
			if(ch>='a'&&ch<='z')
			{
				for(int j=0;j<str.length();j=j+2)
				{
		
			
						ch=str.charAt(j);
						ch=(char) (ch+32);
						str3=str3+ch;
				
				}

			}
			
		
		return str3;
	}

}
